<config>
    <!-- 全局信息配置 -->
    <global>
        <author>maple</author>
        <isKotlin>true</isKotlin>
        <outputDir>/src/main/kotlin</outputDir>
    </global>

    <!-- 数据库配置 -->
    <dataSource>
        <dbUrl>jdbc:mysql://localhost:3306/myblog?useUnicode=true&amp;useSSL=false&amp;characterEncoding=utf8&amp;serverTimezone=GMT</dbUrl>
        <dbDriverName>com.mysql.cj.jdbc.Driver</dbDriverName>
        <dbUserName>maple</dbUserName>
        <dbPassword>maple</dbPassword>
    </dataSource>

    <!-- 包配置 -->
    <package>
        <basePackage>ice.maple</basePackage>
        <moduleName/>
    </package>

    <!-- 模板配置 -->
    <template>
        <templatePath>/template</templatePath>
        <entity>/entity.kt</entity>
        <xml/>
        <mapper/>
        <service/>
        <serviceImpl/>
        <controller/>
    </template>

    <!-- 策略配置 -->
    <strategy>
        <superEntityClass/>
        <superControllerClass/>
        <tableNames>user,role</tableNames>
        <tablePrefix/>
    </strategy>
</config>